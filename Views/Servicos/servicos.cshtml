
@{
    var userId = Context.Session.GetInt32("UserId");
    bool isLoggedIn = userId.HasValue;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/servicos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>Serviços - Tough Service</title>
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li><img src="~/IMG/LOGO (2).png" alt="" width="40px"></li>
                        <li class="nav-item"><a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a></li>
                         @if (!isLoggedIn)
                    {
                        <li class="nav-item"><a class="nav-link" asp-action="Registro" asp-controller="Registro">Registro</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Login" asp-controller="Registro">Login</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-action="Perfil" asp-controller="Perfil">Perfil</a></li>
                    }
                       
                        
                          <li class="nav-item"><a class="nav-link" href="servicos.html">Serviços</a></li>
                        <li class="nav-item dropdown">
                          
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a class="btn btn-outline-dark" type="submit" asp-action="Carrinho" asp-controller="Carrinho">
                            <i class="bi-cart-fill me-1"></i>
                            
                            Carrinho
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </a>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <section class="servicos-container">
            <h1>Nossos Serviços</h1>
            
            <div class="servicos-grid">
                <!-- Serviço 1 -->
                 <section>
                <div class="servico-card">
                    <div class="servico-icon">
                        <i class="fas fa-tools"></i>
                    </div>
                    <h3>Manutenção Preventiva</h3>
                    <p>Realizamos manutenção preventiva para garantir o melhor desempenho do seu equipamento.</p>
                    <ul class="servico-lista">
                        <li>Inspeção completa</li>
                        <li>Lubrificação</li>
                        <li>Ajustes necessários</li>
                        <li>Testes de funcionamento</li>
                    </ul>
                    <button class="btn-servico">Solicitar Orçamento</button>
                </div>
            </section>
                <!-- Serviço 2 -->
                 <section>
                <div class="servico-card">
                    <div class="servico-icon">
                        <i class="fas fa-wrench"></i>
                    </div>
                    <h3>Reparo Técnico</h3>
                    <p>Equipe especializada em reparos técnicos de equipamentos industriais.</p>
                    <ul class="servico-lista">
                        <li>Diagnóstico preciso</li>
                        <li>Reparo de componentes</li>
                        <li>Substituição de peças</li>
                        <li>Garantia do serviço</li>
                    </ul>
                    <button class="btn-servico">Solicitar Orçamento</button>
                </div>
            </section>
                <!-- Serviço 3 -->
                 <section>
                <div class="servico-card">
                    <div class="servico-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h3>Instalação</h3>
                    <p>Instalação profissional de equipamentos industriais.</p>
                    <ul class="servico-lista">
                        <li>Planejamento da instalação</li>
                        <li>Montagem profissional</li>
                        <li>Testes de segurança</li>
                        <li>Treinamento operacional</li>
                    </ul>
                    <button class="btn-servico">Solicitar Orçamento</button>
                </div>
            </section>
                <!-- Serviço 4 -->
                 <section>
                <div class="servico-card">
                    <div class="servico-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h3>Suporte Técnico</h3>
                    <p>Suporte técnico especializado para seus equipamentos.</p>
                    <ul class="servico-lista">
                        <li>Atendimento 24/7</li>
                        <li>Suporte remoto</li>
                        <li>Orientação técnica</li>
                        <li>Solução de problemas</li>
                    </ul>
                    <button class="btn-servico">Solicitar Orçamento</button>
                </div>
            </section>
            </div>
       

    </main>
 <!--Footer ultima coisa a ser feita e melhorar-->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>Contato</h3>
                <p>Email: contato@toughservice.com</p>
                <p>Telefone: (71) 99204-6022</p>
            </div>
            <div class="footer-section">
                <h3>Endereço</h3>
                <p>Rua, 123</p>
                <p>Camaçari - BA</p>
            </div>
        </div>
    </footer>

    <script src="~/js/servicos.js"></script>
</body>
</html>